<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/rl_listNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_listNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_west_24"
            android:layout_centerVertical="true"
            app:tint="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_listNote"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/title_date_listNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu hai, 12 thang 04"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy_listNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_listNote"
        android:layout_marginTop="@dimen/padd_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recy_listNote">
        <TextView
            android:id="@+id/txt_vm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="12"
            android:textSize="40dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_vm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_vm"
            android:backgroundTint="@color/md_yellow_300_dark"
            android:text="Up"/>
    </RelativeLayout>
</RelativeLayout>