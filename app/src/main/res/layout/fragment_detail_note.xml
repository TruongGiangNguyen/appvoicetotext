<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_backtNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/ll_back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/back_addDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginLeft="3dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/more_Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/black"
            android:layout_below="@id/ll_back_detail"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_control_editNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_round_undo_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/undo_edit"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done_edit"
                android:textColor="@color/main"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_round_check_24"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/black"
            android:layout_below="@id/ll_undo"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_titleTime_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:padding="16dp">
        <FrameLayout
            android:id="@+id/fr_txt_edt_timeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/title_timeDate_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:56, Thu Nam, 22 Thang 04"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:visibility="visible"/>
            <EditText
                android:id="@+id/edit_timeDate_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09:56, Thu Nam, 22 Thang 04"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:visibility="gone"/>
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0.02dp"
            android:background="@color/black"
            android:layout_below="@id/fr_txt_edt_timeDate"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_player_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_titleTime_detail"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="10"
        android:layout_above="@+id/toggle_recording_button">
        <RelativeLayout
            android:id="@+id/rl_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:padding="16dp">
            <TextView
                android:id="@+id/txt_detailNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fadfa gasgak gasgas gasgad gasgas agasdgasdg  fasdfafasdfas"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edt_editNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="fadfa gasgak gasgas gasgad gasgas agasdgasdg  fasdfafasdfas"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="top"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">
            <TextView
                android:id="@+id/txt_player_progress_current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <SeekBar
                android:id="@+id/txt_player_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/main"
                android:thumbTint="@color/main"
                />
            <TextView
                android:id="@+id/txt_player_progress_max"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/toggle_recording_button"
        android:layout_width="@dimen/toggle_recording_button_size"
        android:layout_height="@dimen/toggle_recording_button_size"
        android:layout_marginBottom="@dimen/big_margin"
        android:background="@drawable/circle_background"
        android:elevation="@dimen/medium_margin"
        android:padding="@dimen/normal_margin"
        android:src="@drawable/ic_play_vector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

