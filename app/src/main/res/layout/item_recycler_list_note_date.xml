<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/yellow_bg_light">

    <TextView
        android:id="@+id/txt_date_listNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/06/2021"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txt_time_listNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00 AM"
        android:layout_below="@id/txt_date_listNote"
        android:textSize="10sp"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:id="@+id/item_rl_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time_listNode"
        android:layout_marginTop="6dp">
        <ImageView
            android:id="@+id/img_contentNote"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_round_error_24" />
        <TextView
            android:id="@+id/txt_contentNode"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Mua ca cho ca"
            android:textSize="10sp"
            android:layout_toRightOf="@id/img_contentNote"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rl_home"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/img_item_timeRecord"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_round_error_24" />
        <TextView
            android:id="@+id/txt_timeRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:textSize="10sp"
            android:layout_toRightOf="@id/img_item_timeRecord"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

</RelativeLayout>